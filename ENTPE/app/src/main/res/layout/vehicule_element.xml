<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/marquedp"
                android:textSize="@dimen/petit"
                android:textColor="@color/champTitre"
                android:gravity="end" />

            <TextView
                android:id="@+id/afficheMarque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/marque"
                android:textSize="@dimen/petit"
                android:textColor="@color/couleur3" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mod_ledp"
                android:textSize="@dimen/petit"
                android:textColor="@color/champTitre"
                android:gravity="end" />

            <TextView
                android:id="@+id/afficheModÃ¨le"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/modele"
                android:textSize="@dimen/petit" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="4pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/immatriculationdp"
                android:textSize="@dimen/petit"
                android:textColor="@color/champTitre"
                android:gravity="end" />

            <TextView
                android:id="@+id/affichePlaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/plaque"
                android:textSize="@dimen/petit" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cat_goriedp"
                android:textSize="@dimen/petit"
                android:textColor="@color/champTitre"
                android:gravity="end" />

            <TextView
                android:id="@+id/afficheCategorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/cat_gorie"
                android:textSize="@dimen/petit" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8pt" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_weight="1"
        android:background="?android:attr/listDivider"
        />

</LinearLayout>
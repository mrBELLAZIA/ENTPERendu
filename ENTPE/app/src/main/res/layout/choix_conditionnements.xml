                    android:layout_height="wrap_content"
                    android:text="@string/conditionementChoix7" />

                <RadioButton
                    android:id="@+id/conditionementChoix8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/conditionementChoix8" />

                <RadioButton
                    android:id="@+id/conditionementChoix9"

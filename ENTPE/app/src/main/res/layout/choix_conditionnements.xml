                    android:layout_height="wrap_content"
                    android:text="@string/conditionementChoix9" />

                <RadioButton
                    android:id="@+id/conditionementChoix10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/conditionementChoix10" />

                <RadioButton
                    android:id="@+id/conditionementChoixAutres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Autres" />

                <EditText
                    android:id="@+id/conditionementEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="@string/PrÃ©cisez"

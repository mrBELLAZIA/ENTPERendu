                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textViewCat"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/precision"
                    android:textColor="@color/champTitre"
                    android:textSize="@dimen/moyen" />


                <RadioGroup
                    android:id="@+id/groupePrecision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/setLow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/faible" />

                    <RadioButton
                        android:id="@+id/setMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moyenne" />

                    <RadioButton
                        android:id="@+id/setHigh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/haute" />
                </RadioGroup>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/layoutConso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/setConso"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/consommation"
                    android:textColor="@color/champTitre"
                    android:textSize="@dimen/moyen" />


                <RadioGroup
                    android:id="@+id/groupeConso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RadioButton
                        android:id="@+id/powLow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/faible" />

                    <RadioButton
                        android:id="@+id/powMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moyenne" />

                    <RadioButton
                        android:id="@+id/powHigh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/haute" />
                </RadioGroup>


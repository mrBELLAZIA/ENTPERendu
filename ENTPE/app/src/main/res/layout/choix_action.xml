<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/actionspossible"
                android:textSize="@dimen/tresgrand"
                android:textColor="@color/champTitre" />

            <RadioGroup
                android:id="@+id/groupeAction"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/actionChoix1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/actionChoix1" />

                <RadioButton
                    android:id="@+id/actionChoix2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/actionChoix2" />

                <RadioButton
                    android:id="@+id/actionChoix3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/actionChoix3" />

                <RadioButton
                    android:id="@+id/actionChoix4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/actionChoix4" />

                <RadioButton
                    android:id="@+id/actionChoixAutres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Autres" />

                <EditText
                    android:id="@+id/editTextTextPersonName4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="@string/PrÃ©cisez"
                    android:importantForAutofill="no"
                    android:gravity="center"/>

            </RadioGroup>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/titre_gestion_vehicule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/titremotorisation"
        android:textSize="@dimen/grand"
        android:textColor="@color/couleur1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/motorisationdp"

            android:textColor="@color/champTitre"
            android:textSize="@dimen/petit" />

        <RadioGroup
            android:id="@+id/groupeMotorisation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/editDiesel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_1_diesel" />

            <RadioButton
                android:id="@+id/editEssence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_2_essence" />

            <RadioButton
                android:id="@+id/editElectrique"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_3_electrique" />

            <RadioButton
                android:id="@+id/editGnvGpl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_4_gnv_gpl" />

            <RadioButton
                android:id="@+id/editHybride"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_5_hybride" />
        </RadioGroup>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/editAnnule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/annuler" />

        <Button
            android:id="@+id/editConfirme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/confirmer" />
    </LinearLayout>
</LinearLayout>
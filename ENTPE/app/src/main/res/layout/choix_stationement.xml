<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="14dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stationnement"
                android:textSize="@dimen/tresgrand"
                android:textColor="@color/champTitre" />

            <RadioGroup
                android:id="@+id/groupeStationnement"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/stationnementchoixEtablissement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stationnementchoix1" />

                <RadioButton
                    android:id="@+id/stationnementchoixAutorise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stationnementchoix2" />

                <RadioButton
                    android:id="@+id/stationnementchoixPayant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stationnementchoix3" />

                <RadioButton
                    android:id="@+id/stationnementchoixInterdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stationnementchoix4" />

                <RadioButton
                    android:id="@+id/stationnementchoix5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stationnementchoix5" />

                <RadioButton
                    android:id="@+id/stationnementchoixAire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stationnementchoix6" />

                <RadioButton
                    android:id="@+id/stationnementchoixCouloir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stationnementchoix7" />

                <RadioButton
                    android:id="@+id/stationnementchoixDoubleFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stationnementchoix8" />

                <RadioButton
                    android:id="@+id/stationnementchoixautres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Autres" />

                <EditText
                    android:id="@+id/stationnementEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:gravity="center"
                    android:hint="@string/PrÃ©cisez"
                    android:importantForAutofill="no" />

            </RadioGroup>

        </LinearLayout>

    </ScrollView>

</LinearLayout>